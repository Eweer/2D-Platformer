<config>
	<app>
		<title>Game Development Testbed</title>
		<organization>UPC</organization>
	</app>

	<renderer>
		<vsync value="true"/>
	</renderer>

	<window>
		<resolution width="1024" height="768" scale="1"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="false"/>
	</window>

	<audio>
		<music volume="128"/>
		<fx volume="128"/>
	</audio>

	<!-- Animstyle: ONCE = 0 | LOOP_FROM_START = 1 | FORWARD_BACKWARD = 2 | LOOP_FORWARD_BACKWARD = 3 | NEVER = 4 -->
	<scene assetpath="Assets/" texturepath="Assets/Textures/" audiopath="Assets/Audio/" fxfolder="Fx/">
		<player x="120" y="420" renderable="true" maxjumps = "2" jumpimpulse = "5" currentcharacter="Mage">
			<!--<physics bodytype="dynamic" size="32" gravityscale="1" restitution="0.5" shape="circle"/>-->
			<physics bodytype="dynamic" width="46d" height="50" gravityscale="1" restitution="0" shape="rectangle"/>
      <animationdata  width="128" height="128" pivotx="42" pivoty="85" animstyle="1" animspeed="1" animloop="true" name="player" animpath="Assets/Animations/Player/"/>
			<animation name="idle" style="4" speed="0.1" frames="3"/>
			<animation name="walk" style="4" speed="0.2" frames="4"/>
		</player>
		<!--
		<item x="256" y="515" texturepath="Assets/Textures/goldCoin.png"/>
		<item x="416" y="512" texturepath="Assets/Textures/goldCoin.png"/>
		<item x="384" y="352" texturepath="Assets/Textures/goldCoin.png"/>
		<item x="200" y="672" texturepath="Assets/Textures/goldCoin.png"/>
		<item x="500" y="672" texturepath="Assets/Textures/goldCoin.png"/>
		-->
	</scene>

	<map>
		<mapfolder path="Assets/Maps/"/>
		<mapfile path="Assets/Maps/Mountain64.tmx"/>
	</map>
	
</config>
